{
    "description": "Terminal pipes in the web",
    "manifest_version": 2,
    "name": "webpipe",
    "version": "0.0.1",
    "background": {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": [
        "content.js"
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/page-16.png",
            "32": "icons/page-32.png"
        },
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "<all_urls>", "activeTab", "tabs"
    ]
}